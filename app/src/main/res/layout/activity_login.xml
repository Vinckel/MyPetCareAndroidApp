<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="petcare.com.mypetcare.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facebook" />

        <Button
            android:id="@+id/bt_login_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="google" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_login_naver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="naver" />

        <Button
            android:id="@+id/bt_login_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="kakao" />

        <!--<Button
            android:id="@+id/bt_login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="facebook"
            app:layout_constraintTop_toBottomOf="@+id/bt_login_kakao"
            tools:layout_editor_absoluteX="0dp" />-->
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
