<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="petcare.com.mypetcare.Activity.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="176dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:src="@drawable/img_bi_login" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ll_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <CheckBox
                android:id="@+id/cb_login_terms1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="이용약관에 동의"
                android:textColor="@color/normalFont" />

            <TextView
                android:id="@+id/tv_login_terms1"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="[전문보기]"
                android:textColor="#7579e8" />

            <CheckBox
                android:id="@+id/cb_login_terms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="개인정보처리에 동의"
                android:textColor="@color/normalFont" />

            <TextView
                android:id="@+id/tv_login_terms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="[전문보기]"
                android:textColor="#7579e8" />

        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/ll_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ll_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <CheckBox
                android:id="@+id/cb_login_terms3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="위치정보처리에 동의"
                android:textColor="@color/normalFont" />

            <TextView
                android:id="@+id/tv_login_terms3"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="[전문보기]"
                android:textColor="#7579e8" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kakao.usermgmt.LoginButton
                android:id="@+id/bt_login_kakao"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical|center_horizontal" />

            <ImageView
                android:id="@+id/bt_login_kakao_fake"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/btn_kakao" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
                android:id="@+id/bt_login_naver"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/bt_login_naver_fake"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/btn_naver" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/bt_login_facebook"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/bt_login_facebook_fake"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/btn_facebook" />
        </FrameLayout>
        <!--<Button
            android:id="@+id/bt_login_naver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="naver" />-->

        <!-- <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="0dp"
             android:text="kakao" />-->

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
