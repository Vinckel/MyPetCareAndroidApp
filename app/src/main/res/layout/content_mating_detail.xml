<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.AdoptDetailActivity"
    tools:showIn="@layout/activity_mating_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_mating_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/tv_mating_detail_page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:background="#88000000"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0/0"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_mating_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="Real Animal Hospital"
                    android:textColor="#4a4a4a"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_mating_detail_map"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:src="@drawable/ic_beauty_shop_t"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_mating_detail_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Seoul National University Medical Center"
                    android:textColor="#9b9b9b"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_title" />

                <TextView
                    android:id="@+id/tv_mating_detail_url_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Homepage"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_subtitle" />

                <TextView
                    android:id="@+id/tv_mating_detail_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="www.realanimal.co.kr"
                    android:textColor="#7579e8"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_url_title"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_url_title" />

                <ImageView
                    android:id="@+id/iv_adopt_title_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:src="#eaeaea"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_url" />


                <TextView
                    android:id="@+id/tv_mating_detail_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="Breed"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_adopt_title_line" />

                <TextView
                    android:id="@+id/tv_mating_detail_breed_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="English Bulldog"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_breed"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_breed" />


                <TextView
                    android:id="@+id/tv_mating_detail_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Color"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_breed" />

                <TextView
                    android:id="@+id/tv_mating_detail_color_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="Brindle"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_color"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_color" />

                <TextView
                    android:id="@+id/tv_mating_detail_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Gender"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_color" />

                <TextView
                    android:id="@+id/tv_mating_detail_gender_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="Male"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_gender"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_gender" />

                <TextView
                    android:id="@+id/tv_mating_detail_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Age"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_gender" />

                <TextView
                    android:id="@+id/tv_mating_detail_age_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="2 Months"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_age"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_age" />

                <TextView
                    android:id="@+id/tv_mating_detail_inoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Inoculation"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_age" />

                <TextView
                    android:id="@+id/tv_mating_detail_inoc_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="3 times"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_inoc"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_inoc" />

                <TextView
                    android:id="@+id/tv_mating_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Price"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_inoc" />

                <TextView
                    android:id="@+id/tv_mating_detail_price_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="1,500,000 Won"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_mating_detail_price"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mating_detail_price" />


                <ImageView
                    android:id="@+id/iv_mating_detail_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:src="#eaeaea"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_price" />

                <TextView
                    android:id="@+id/tv_mating_detail_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:text="DDDDDDDDDDDDD\nAAAAAAAAAAAAAA\nBBBBBBBBBBB\nCCCCCCCCCCCCC\nCCCCCCCCCCCCC\nCCCCCCCCCCCCC\nCCCCCCCCCCCCC\nCCCCCCCCCCCCC"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_mating_detail_line" />

                <Button
                    android:id="@+id/bt_mating_detail_call"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="42dp"
                    android:background="@color/colorPrimary"
                    android:text="make a Call"
                    android:textColor="@android:color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mating_detail_description" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
