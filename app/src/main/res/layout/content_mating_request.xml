<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.MatingRequestActivity"
    android:background="@android:color/white"
    tools:showIn="@layout/activity_mating_request">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_mating_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/tv_mating_detail_page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:background="#88000000"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0/0"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp">

            <!--이름-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mating_request_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Name"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_mating_request_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_mating_request_name"
                    android:background="@android:color/transparent"
                    android:hint="Input name"
                    android:paddingBottom="10dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#cacaca"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/et_mating_request_name"
                    android:src="#cbcaca" />
            </RelativeLayout>

            <!--견종-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mating_request_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Breed"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_mating_request_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_mating_request_breed"
                    android:background="@android:color/transparent"
                    android:hint="Input breed"
                    android:paddingBottom="10dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#cacaca"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/et_mating_request_breed"
                    android:src="#cbcaca" />
            </RelativeLayout>

            <!--컬러-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mating_request_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Color"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_mating_request_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_mating_request_color"
                    android:background="@android:color/transparent"
                    android:hint="Input color"
                    android:paddingBottom="10dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#cacaca"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/et_mating_request_color"
                    android:src="#cbcaca" />
            </RelativeLayout>

            <!--성별-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mating_request_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Gender"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/tv_mating_request_gender"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingRight="5dp">

                        <Button
                            android:id="@+id/bt_mating_request_gender_male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="남" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp">

                        <Button
                            android:id="@+id/bt_mating_request_gender_female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="여" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--나이-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mating_request_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Age"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_mating_request_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_mating_request_age"
                    android:background="@android:color/transparent"
                    android:hint="Input age"
                    android:paddingBottom="10dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#cacaca"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/et_mating_request_age"
                    android:src="#cbcaca" />
            </RelativeLayout>

            <!--소개-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mating_request_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Introduce"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_mating_request_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_mating_request_intro"
                    android:background="@android:color/transparent"
                    android:hint="Input intro"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:paddingBottom="10dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:scrollHorizontally="false"
                    android:textColorHint="#cacaca"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
