<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.ReceiptInsureActivity"
    tools:showIn="@layout/activity_receipt_insure">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_receipt_insure_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:hint="성함을 입력해주세요."
                android:maxLength="40"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="#cbcaca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="치료 일시"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_receipt_insure_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:hint="치료 일시를 입력해주세요. (예: 20130116)"
                android:inputType="number"
                android:maxLength="8"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="#cbcaca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="증상"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_receipt_insure_symptom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:hint="증상을 입력해주세요. (예: 골절, 피부염)"
                android:maxLength="40"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="#cbcaca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="연락처"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_receipt_insure_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:hint="연락처를 입력해주세요. (예: 01011112222)"
                android:inputType="phone"
                android:maxLength="15"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="#cbcaca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="사진 첨부"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_receipt_insure_attach_1"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:src="@drawable/add_photo" />

                <ImageView
                    android:id="@+id/iv_receipt_insure_attach_2"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/add_photo" />

                <ImageView
                    android:id="@+id/iv_receipt_insure_attach_3"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:src="@drawable/add_photo" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_insure_register_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="완료"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
