<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="17dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="25dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.InsureInfoActivity"
    tools:showIn="@layout/activity_insure_info">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_insure_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_insure_info_indicator"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/ll_insure_info_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_insure_info_register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_insure_info_page_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="#edecec" />

        <ImageView
            android:id="@+id/iv_insure_info_page_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="#edecec" />

        <ImageView
            android:id="@+id/iv_insure_info_page_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="#edecec" />

        <ImageView
            android:id="@+id/iv_insure_info_page_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="#edecec" />

        <ImageView
            android:id="@+id/iv_insure_info_page_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="#edecec" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_insure_info_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="펫 보험 가입"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>
