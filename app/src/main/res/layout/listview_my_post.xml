<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/ll_my_post_type"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_my_post_type"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tv_my_post_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="알 수 없음" />
    </LinearLayout>

    <NetworkImageView
        android:id="@+id/iv_my_info_pet_img"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_toEndOf="@+id/ll_my_post_type"
        android:src="@drawable/img_list_empty_list" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/iv_lv_my_info_pet_img"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/tv_my_post_type_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="알 수 없음"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_my_post_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="알 수 없음"
            android:textColor="#626262"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_my_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="알 수 없음"
            android:textColor="#cacaca"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>