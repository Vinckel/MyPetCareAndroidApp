<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.MissingDetailActivity"
    tools:showIn="@layout/activity_missing_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <ImageView
                android:id="@+id/iv_missing_detail_zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_photo_empty"
                android:visibility="visible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_missing_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_missing_detail_page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:background="#88000000"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0/0"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_missing_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="이름"
                    android:textColor="#4a4a4a"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_missing_detail_found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="FOUND"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_name"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_name" />

                <TextView
                    android:id="@+id/tv_missing_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="날짜"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_name" />

                <TextView
                    android:id="@+id/tv_missing_detail_date_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_date"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_date" />

                <TextView
                    android:id="@+id/tv_missing_detail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="실종장소"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_date" />

                <TextView
                    android:id="@+id/tv_missing_detail_location_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_location"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_location" />

                <TextView
                    android:id="@+id/tv_missing_detail_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="특징"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_location" />

                <TextView
                    android:id="@+id/tv_missing_detail_mark_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_mark"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_mark" />

                <TextView
                    android:id="@+id/tv_missing_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="사례금"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_mark_desc" />

                <TextView
                    android:id="@+id/tv_missing_detail_price_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_price"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_price" />

                <TextView
                    android:id="@+id/tv_missing_detail_etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="기타"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_price" />

                <TextView
                    android:id="@+id/tv_missing_detail_etc_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_etc"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_etc" />

                <ImageView
                    android:id="@+id/iv_missing_detail_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:src="#eaeaea"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_etc" />

                <TextView
                    android:id="@+id/tv_missing_detail_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="견종"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_missing_detail_line" />

                <TextView
                    android:id="@+id/tv_missing_detail_breed_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:text="잉글리쉬불독"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_breed"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_breed" />

                <TextView
                    android:id="@+id/tv_missing_detail_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="컬러"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_breed" />

                <TextView
                    android:id="@+id/tv_missing_detail_color_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_color"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_color" />

                <TextView
                    android:id="@+id/tv_missing_detail_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="성별"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_color" />

                <TextView
                    android:id="@+id/tv_missing_detail_gender_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_gender"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_gender" />

                <TextView
                    android:id="@+id/tv_missing_detail_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="나이"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_gender" />

                <TextView
                    android:id="@+id/tv_missing_detail_age_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_missing_detail_age"
                    app:layout_constraintLeft_toRightOf="@+id/tv_missing_detail_age" />

                <Button
                    android:id="@+id/bt_missing_detail_call"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="42dp"
                    android:background="@color/colorPrimary"
                    android:text="전화걸기"
                    android:textColor="@android:color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_missing_detail_age" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
