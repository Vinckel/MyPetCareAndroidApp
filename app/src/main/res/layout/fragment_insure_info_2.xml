<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context="petcare.com.mypetcare.Activity.InsureInfoActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/ll_insure_info_page_2_m1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="35dp">

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:src="@drawable/profile1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#ffffff"
            android:gravity="left"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="가입절차는 까다롭지 않나요?"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_insure_info_page_2_m1"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="#ffffff"
            android:gravity="left"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:textColorLink="#615fe2"
            android:text="까다롭지 않아요!\n간단한 절차만 밟으면 된답니다^^"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:src="@drawable/insu_profile" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:text="&quot;당신의 반쪽을 지켜주세요!&quot;"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>
