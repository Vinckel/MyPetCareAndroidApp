<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.MyInfoActivity"
    tools:showIn="@layout/activity_my_info">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp">

        <petcare.com.mypetcare.Activity.CustomView.RoundedImageView
            android:id="@+id/iv_my_info_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_my_info_add"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/btn_add_profile_n"
            app:layout_constraintBottom_toBottomOf="@+id/iv_my_info_profile"
            app:layout_constraintRight_toRightOf="@+id/iv_my_info_profile" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_my_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:hint="이름을 입력하세요"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#4a4a4a"
            android:textColorHint="#cacaca"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:src="#cbcaca" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이펫"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_my_info_pet_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="등록된 마이펫이 없습니다. 마이펫을 등록해보세요!"
                android:textColor="#9b9b9b"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_my_info_pet_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="추가정보 등록하기"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_my_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/naviDivider"
            android:dividerHeight="14dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_my_info_done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0"
            android:background="@color/colorPrimary"
            android:text="완료"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
