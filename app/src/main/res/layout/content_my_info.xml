<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="petcare.com.mypetcare.Activity.MyInfoActivity"
    tools:showIn="@layout/activity_my_info">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_my_info_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/iv_my_info_add"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_add_photo"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/iv_my_info_profile"
            app:layout_constraintBottom_toBottomOf="@+id/iv_my_info_profile"
            android:layout_marginBottom="8dp" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
