<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="petcare.com.mypetcare.RegisterActivity">

    <TextView
        android:id="@+id/tvPetInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/btnPic1"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:text="Button"
        app:layout_constraintRight_toLeftOf="@+id/btnPic2"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPetPic" />

    <Button
        android:id="@+id/btnPic2"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPetPic" />

    <Button
        android:id="@+id/btnPic3"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:text="Button"
        app:layout_constraintLeft_toRightOf="@+id/btnPic2"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPetPic" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="180dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvPetPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/register_pic"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="77dp" />

    <TextView
        android:id="@+id/tvPetSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_species"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPic1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4" />

    <Spinner
        android:id="@+id/spnPetSpecies"
        android:layout_height="45dp"
        android:layout_width="328dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPetSpecies"
        app:layout_constraintRight_toLeftOf="@+id/guideline5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="344dp" />

    <TextView
        android:id="@+id/tvPetBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_birth"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spnPetSpecies" />

    <Spinner
        android:id="@+id/spnPetBirth"
        android:layout_height="45dp"
        android:layout_width="328dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPetBirth" />

    <Button
        android:id="@+id/btnOk"
        android:layout_height="50dp"
        android:layout_width="328dp"
        android:text="@string/register_complete"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp" />

</android.support.constraint.ConstraintLayout>
