<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/normalFont</item>
    </style>

    <style name="MyPopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">#0F213F</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="CustomActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/naviTopFont</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- <style name="PauseDialog" parent="@android:style/Theme.Dialog">
         <item name="android:windowTitleStyle">@style/PauseDialogTitle</item>
     </style>-->
    <style name="PauseDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog">
        <!--<item name="android:textColor">#2F2E86</item>-->
        <!--<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!-- 버튼 기본 구분선 없애기 -->
        <!--<item name="android:buttonBarStyle">@null</item>-->
    </style>

    <style name="JoinAgeNumberPickerTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">#ff0000</item>
        <!--<item name="selectionDivider">@drawable/new_nine_path_drawable_name</item>-->
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/indicator</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/indicatorSelectedFont</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
